<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="40dp"
     >

    <ImageButton
        android:id="@+id/button1"
        android:contentDescription="@string/imagebutton_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/workout"
        android:layout_marginTop="30dp"
        android:onClick="workout"
        android:background="@null"
         />

    <ImageButton
        android:id="@+id/button2"
        android:contentDescription="@string/imagebutton_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/button1"
        android:src="@drawable/exercises"
        android:onClick="exercise"
        android:background="@null"
         />

    <ImageButton
        android:id="@+id/button3"
        android:contentDescription="@string/imagebutton_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="27dp"
        android:src="@drawable/history"
        android:onClick="historik"
        android:background="@null" />

    <ImageButton
        android:id="@+id/button4"
        android:contentDescription="@string/imagebutton_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/button2"
        android:src="@drawable/statistics"
        android:onClick="statistik"
        android:background="@null" />
    
    <ImageButton
        android:id="@+id/button5"
        android:contentDescription="@string/imagebutton_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_marginTop="245dp"
        android:src="@drawable/profile"
        android:onClick="profile"
        android:background="@null"
        />
    
    <ImageButton
        android:id="@+id/button6"
        android:contentDescription="@string/imagebutton_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/button2"
        android:src="@drawable/settings" 
        android:background="@null"/>

</RelativeLayout>
