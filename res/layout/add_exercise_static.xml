<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView_type_of_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_type_of_training"
            tools:context=".AddExercise" />

        <TextView
            android:id="@+id/textView_primary_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_type_of_training"
            android:text="@string/string_primary_muscle"
            tools:context=".AddExercise" />

        <TextView
            android:id="@+id/textView_secondary_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_primary_muscle"
            android:text="@string/string_secondary_muscle"
            tools:context=".AddExercise" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_secondary_muscle"
            android:text="@string/description"
            tools:context=".AddExercise" />

        <TextView
            android:id="@+id/textView_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_description"
            android:text="@string/comment"
            tools:context=".AddExercise" />

        <Spinner
            android:id="@+id/spinner_type_of_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_type_of_training"
            android:prompt="@string/trainingtype_prompt" />

        <Spinner
            android:id="@+id/spinner_primary_muscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_primary_muscle"
            android:prompt="@string/primary_muscletype_prompt" />

        <Spinner
            android:id="@+id/spinner_secondary_muscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_secondary_muscle"
            android:entries="@array/muscle_type"
            android:prompt="@string/secondary_muscletype_prompt" />

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/textView_comment"
            android:gravity="top|left"
            android:hint="@string/hint_comment"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/textView_description"
            android:gravity="top|left"
            android:hint="@string/hint_description"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:id="@+id/LL_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_comment"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/button_done"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="@string/string_done" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="@string/string_cancel" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>